body
  width: 100%
  height: 100%
  color: $primary-text
  background-color: $background-color

  header
  main
  footer
    margin-left: 320px

  .accent-text
    color: $secondary-color

  h1
    color: $primary-color

  h2
    color: $secondary-color

  p
    color: $secondary-text

  .waves-effect.waves-secondary
    .waves-ripple
      background-color: $secondary-color;

  .iconized-info-panel
    .iconized-info
      line-height: 1
      font-size: 15px
      padding: 0
      margin: 5px 0
      display: flex
      align-items: center

      &:first-child
        margin-top: 15px

      &:last-child
        margin-bottom: 15px

    .icon
      width: 25px
      margin-right: 5px
      text-align: center
