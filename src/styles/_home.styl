.home
  .side-nav
    width: 320px

    .userView
      background-color: $primary-color
      display: flex
      flex-direction: column

      .circle
        height: 120px
        width: 120px
        display: block
        margin: auto

      div
        line-height: 25px;
        font-size: 15px
        padding: 0
        margin: 5px 0
        display: flex
        justify-content: space-between
        align-items: center

        &:nth-of-type(1)
          margin-top: 15px

        &:nth-of-type(4)
          margin-bottom: 15px

        span
          width: 25px
          text-align: center
